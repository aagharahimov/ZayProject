@using ZayProject.Areas.Admin.Models.Category
@model CategoryIndexVM;
@section Styles {
<!-- Custom styles for this page -->
<link href="~/admin/assets/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Categories</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Sliders</h6>
        <a class="btn btn-primary" asp-action="create" asp-controller="Category">Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Edit</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>Name</th>
                    <th>Created At</th>
                    <th>Modified At</th>
                    <th>Edit</th>
                </tr>
                </tfoot>
                <tbody>
                @foreach (var category in Model.Categories)
                {
                <tr>
                    <td>@category.Name</td>
                    <td class="text-nowrap">@category.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@category.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-center d-flex justify-content-center">
                        <a class="btn btn-secondary mx-2" asp-action="update" asp-controller="Category" asp-route-id="@category.Id">Update</a>
                        <form method="post" asp-action="delete" asp-controller="Category" asp-route-id="@category.Id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<!-- Page level plugins -->
<script src="~/admin/assets/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/admin/assets/vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="~/admin/assets/js/demo/datatables-demo.js"></script>
<script>
    $(document).ready(function () {
        $('#dataTable').DataTable();
    });
</script>
}